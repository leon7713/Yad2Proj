@model Product
@{
    ViewData["Title"] = "All Products";
    string imgSrc = "";
    if (Model.Image1 != null)
    {
        var base64 = Convert.ToBase64String(Model.Image1);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }

}
<h3>@Model.Title</h3>
<div>@Model.Timestamp</div>
<div>@Model.ShortDesc</div>
<img src=@imgSrc/>

<div>
    <a asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Id">Add To Cart</a>
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">Details</a>
</div>




