@if (!User.Identity.IsAuthenticated)
{
   <div class="myBorder">
      <div class="panel panel-default">
         <div class="panel-heading">
            <h6 class="panel-title">Please enter your credentials</h6>
         </div>
         <div class="panel-body">
            <form asp-controller="Account" asp-action="Login" method="post">
               <fieldset>
                  <div class="form-group">
                     <label>Username:</label>
                     <input type="text" required="required" class="form-control" placeholder="Username" name="Username" autofocus>
                  </div>
                  <div class="form-group">
                     <label>Password:</label>
                     <input type="password" required="required" class="form-control" placeholder="Password" name="Password" autocomplete="off">
                  </div>
                  <div class="login-remember">
                     <label>
                        <input type="checkbox">
                        <strong>Remember Me</strong>
                     </label>
                  </div>
                  <div class="text-danger font-weight-bold">
                     @TempData["Message"]
                  </div>
                  <div></div>
                  <div class="form-group">
                     <button class="btn btn-primary mt-1">Login</button>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
   </div>
}
else
{
   <div class="myBorder font-weight-bold">
      Wellcome
      @User.Claims.FirstOrDefault().Value<br />
      <a asp-controller="Account" asp-action="Logout" class="btn btn-primary mt-3">Logout</a>
   </div>
}