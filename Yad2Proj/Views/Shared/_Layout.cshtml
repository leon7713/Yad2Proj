<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>Yad2Proj</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
   <header>
      <div class="row">
         <div class="col-md-9">
            <h2 class="main-name-header">@ViewBag.MainName</h2>
         </div>
         <div class="col-md-3 mt-3">
            <h4>Yad2Proj</h4>
            <img src="~/Contents/yad2Logo.png" alt="Site Logo" width="70" id="siteLogo"/>
         </div>
      </div>
      <br />
   </header>
   <main role="main" class="pb-3">
      <div class="row">
         <div class="col-md-9 ml-5">
            @RenderBody()
         </div>
         <div class="col-md-2">
            <partial name="_Login" view-data="ViewData" />
            <partial name="_SiteMap" />
         </div>
      </div>
   </main>

   <footer class="border-top footer text-muted">
      <div class="container">
         &copy; 2021 - Yad2Proj - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </div>
   </footer>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/js/site.js" asp-append-version="true"></script>
   @RenderSection("Scripts", required: false)
</body>
</html>
