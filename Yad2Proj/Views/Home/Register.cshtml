@model User

<form action="@Url.Action("Register", "Home")" method="post">
   <div class="myBorder">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div>
         <label asp-for="FirstName">First Name:</label>
         <input asp-for="FirstName">
      </div>
      
      <label asp-for="LastName">Last Name:</label>
      <input asp-for="LastName"><br />
      <label asp-for="Email">Email:</label>
      <input asp-for="Email"><br />
      <label asp-for="BirthDate">BirthDate:</label>
      <input type="date" asp-for="BirthDate"><br />
      <label asp-for="UserName">User Name:</label>
      <input asp-for="UserName"><br />
      <label asp-for="Password">Password:</label>
      <input asp-for="Password" type="password" /><br />
      <label asp-for="ConfirmPassword"></label>
      <input asp-for="ConfirmPassword" type="password" /><br />
      
      <button type="submit" class="btn btn-sm btn-primary rounded-5">Register</button>
      <div class="text-danger mt-1">@ViewBag.ErrorMessage</div>
   </div>
</form>
